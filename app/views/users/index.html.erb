<h1 align="center">All User List</h1>
<div align="center">
  <%= will_paginate %>
</div>
<div class="table-responsive">
  <table class="table table-condensed table-striped">
    <tr>
      <th>Photo</th>
      <th>User Name</th>
      <th>Articles(count)</th>
      <% if logged_in? and current_user.admin? %>
        <th>Action</th>
      <% end %>
    </tr>
    <% @users.each do |user| %>
    <%# obj.each do |article| %>
      <tr>
        <td><%= link_to gravatar_for(user), user_path(user) %></td>
        <td>
          <%= link_to user.username, user_path(user) %>
        </td>
        <td>
          <small class="articles-meta-details">
            <%= pluralize(user.articles.count, "article") if user.articles %>
          </small>
        </td>
        <% if logged_in? and current_user.admin? %>
          <td>
            <%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete the user and all their articles?" } %>
          </td>
        <% end %>

<!--        <td><%#= link_to 'Edit', edit_article_path(article), class: "btn btn-md btn-primary" %></td>-->
<!--        <td><%#= link_to 'Delete', article_path(article), class: "btn btn-md btn-danger" , method: :delete, data:{confirm: "Are you sure to delete?"} %></td>-->
      </tr>
    <% end %>
  </table>
</div>
<div align="center">
  <%= will_paginate %>
</div>